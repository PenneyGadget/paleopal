jQuery ->
  $('body').prepend('<div id="fb-root" data-app-id="<%= ENV["FACEBOOK_APP_ID"] %>"></div>')

  $.ajax
    url: "#{window.location.protocol}//connect.facebook.net/en_US/all.js"
    dataType: 'script'
    cache: true


window.fbAsyncInit = ->
  FB.init(
    appId: '<%= ENV["FACEBOOK_APP_ID"] %>',
    cookie: true,
    status : true,
    xfbml  : true
    )

  $('.login-btn').click (e) ->
    e.preventDefault()
    FB.login (response) ->
      window.location = '/auth/facebook/callback' if response.authResponse

  $('.logout-btn').click (e) ->
    FB.getLoginStatus (response) ->
      FB.logout() if response.authResponse
    true
